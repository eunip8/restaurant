<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if flash[:notice] || flash[:alert] %>
      <p class="notice"><%= flash[:notice] %></p>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
