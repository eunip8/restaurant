<h3><%= @restaurant.name %></h3>

<p>Location: <%= @restaurant.location %></p>
<p>Description: <%= @restaurant.description %></p>

<h3>Reviews</h3>
<ul>
  <% @reviews.each do |review| %>
    <li><%= review.description %>
      <%= link_to 'Edit', edit_restaurant_review_path(@restaurant, review) %> |
      <%= link_to 'Delete', restaurant_review_path(review),
      method: :delete,
      data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<h3>Post Review</h3>
<%= form_for([@restaurant, @review]) do |f| %>

  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= pluralize(@review.errors.count, "error") %> prohibited
        this review from being saved:
      </h3>
      <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %> |
<%= link_to 'Delete', restaurant_path(@restaurant),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
